<Window x:Class="FileManager.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="Input" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Name="Prompt" Content="Enter input value:"/>
            <TextBox x:Name="InputTextBox"/>
            <Button Content="OK" Width="60" Margin="5" HorizontalAlignment="Right" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
